<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/select5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Select"
        android:textSize="24sp"
        android:background="@drawable/border_background"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infor"
        android:onClick="SubjectInf5"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="243dp"
        android:layout_height="183dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/image3" />

    <Button
        android:id="@+id/rus5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eng5"
        android:onClick="SubjectEng5"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="275dp"
        android:layout_height="207dp"
        android:layout_gravity="center"
        android:layout_marginEnd="-0dp"
        android:layout_marginTop="-0dp"
        android:src="@drawable/image2" />

    <Button
        android:id="@+id/mat5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mat5"
        android:onClick="SubjectMat5"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="163dp"
        android:layout_gravity="start"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-15dp"
        android:src="@drawable/image4" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="163dp"
        android:layout_gravity="end"
        android:layout_marginTop="-163dp"
        android:layout_marginEnd="-20dp"
        android:src="@drawable/image5" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/SelectSubjects"
        style="@style/Base.Theme.EdoGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Back"
        android:textColor="@color/text"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:onClick="Select_Subjest"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
</ScrollView>
