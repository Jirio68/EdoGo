<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Select_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Select_class"
            android:textSize="24sp"
            android:background="@drawable/border_background"
            android:layout_gravity="center"
            android:paddingHorizontal="8dp"
            android:textColor="#333333"
            android:paddingBottom="1dp"/>

        <!-- Кнопка переключения темы -->
        <ImageButton
            android:id="@+id/theme_toggle_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="-35dp"
            android:src="@drawable/baseline_wb_sunny_24"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/toggle_theme"
            android:layout_gravity="end"
            android:layout_marginBottom="80dp"/>



    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Class_5"
        android:onClick="select5"
        android:layout_marginBottom="80dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Class_6"
        android:onClick="select6"
        android:layout_marginBottom="80dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Class_7"
        android:onClick="select7"
        android:layout_marginBottom="80dp"/>

    <!-- Пустое пространство для сдвига картинки вниз -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="163dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:src="@drawable/image1" />

</LinearLayout>